<Window x:Class="Projekt_Groteka.addcm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Projekt_Groteka"
        mc:Ignorable="d"
        Title="addcm" Height="200" Width="300" ResizeMode="NoResize">
    <Grid>
        <TextBlock HorizontalAlignment="Center">Komentarz</TextBlock>
        <TextBox Name="Comment" Margin="0,20,0,0" HorizontalAlignment="center" VerticalAlignment="Top" Width="200" Height="30" ></TextBox>
        <TextBlock Margin="0,0,0,40" HorizontalAlignment="Center" VerticalAlignment="Center">Ocena</TextBlock>
        <TextBox Name="Rating" Margin="0,15,0,0" HorizontalAlignment="center" VerticalAlignment="center" Width="200" Height="30"></TextBox>
        <Button Name="Add" Margin="0,0,0,10" VerticalAlignment="Bottom"  HorizontalAlignment="center" Width="100" Height="20" Click="add_click">Dodaj</Button>
    </Grid>
</Window>
