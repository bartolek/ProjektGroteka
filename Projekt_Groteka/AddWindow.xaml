<Window x:Class="Projekt_Groteka.AddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Projekt_Groteka"
        mc:Ignorable="d"
        Title="AddWindow" Height="200" Width="300" ResizeMode="NoResize">
    <Grid>
        <TextBlock HorizontalAlignment="Center">Nazwa Gry</TextBlock>
        <TextBox Name="NazwaGry" Margin="0,20,0,0" HorizontalAlignment="center" VerticalAlignment="Top" Width="200" Height="30" ></TextBox>
        <TextBlock Margin="0,0,0,40" HorizontalAlignment="Center" VerticalAlignment="Center">Link/ścieżka do okładki</TextBlock>
        <TextBox Name="ObrazekGry" Margin="0,15,0,0" HorizontalAlignment="center" VerticalAlignment="center" Width="200" Height="30"></TextBox>
        <Button Name="Dodaj" Margin="0,0,0,10" VerticalAlignment="Bottom"  HorizontalAlignment="center" Width="100" Height="20">Dodaj</Button>
    </Grid>
</Window>
